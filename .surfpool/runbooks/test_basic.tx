// Basic Surfpool test runbook for Percolator
// This tests that we can create accounts and interact with Solana

// Create a test keypair for testing
action "create_test_wallet" "txtx::keypair::new" {
}

// Request an airdrop to the test wallet
action "request_airdrop" "solana::request_airdrop" {
    recipient = action.create_test_wallet.address
    lamports = 1000000000  // 1 SOL
}

// Check the balance
action "check_balance" "solana::get_balance" {
    address = action.create_test_wallet.address
}

// Output the results
output "test_wallet_address" {
    value = action.create_test_wallet.address
}

output "test_wallet_balance" {
    value = action.check_balance.balance
}
